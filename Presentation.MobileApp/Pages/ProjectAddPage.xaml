<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Presentation.MobileApp.Pages.ProjectAddPage"
             
             xmlns:viewmodels="clr-namespace:Presentation.MobileApp.ViewModels"
             x:DataType="{x:Type viewmodels:ProjectAddViewModel}"
             
             Title="Add New Project">

    <VerticalStackLayout>
        <Label 
            Text="Add New Project"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button x:Name="Btn_ProjectList" Text="View All Projects" Command="{Binding NavigateToListCommand}"/>
        <Button x:Name="Btn_GoToMainMenu" Text="Main Menu" Command="{Binding NavigateToHomeCommand }"/>
    </VerticalStackLayout>
</ContentPage>