<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Presentation.MobileApp.Pages.EmployeeListPage"
             
              xmlns:viewmodels="clr-namespace:Presentation.MobileApp.ViewModels"
              x:DataType="{x:Type viewmodels:EmployeeListViewModel}"
             
             Title="All Employees">
    <Grid RowDefinitions="auto, *, auto">
        <VerticalStackLayout Grid.Row="0">
            <Label Text="All Employees" VerticalOptions="Center"  HorizontalOptions="Center" />
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="1">
            <CollectionView ItemsSource="{Binding Employees}" x:Name="List_AllEmployees" Margin="10">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type viewmodels:EmployeeAddViewModel}">
                        <Grid>
                            <HorizontalStackLayout>
                                <Label Text="{Binding FirstName}" FontSize="16" Padding="5"/>
                                <Label Text="{Binding LastName}" FontSize="16"  Padding="5"/>
                                <Label Text="{Binding Email}" FontSize="14"  Padding="5"/>
                                <Label Text="{Binding PhoneNumber}" FontSize="14"  Padding="5"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="{Binding ErrorMessage}" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyBoolConverter}}"
   TextColor="Red"/>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="2" Margin="20">
            <Button x:Name="Btn_AddEmployee" Text="Add New Employee" Command="{Binding NavigateToEmployeeAddCommand}" Margin="10"/>
            <Button x:Name="Btn_GoToMainMenu" Text="Main Menu" Command="{Binding NavigateToHomeCommand }" Margin="10"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>